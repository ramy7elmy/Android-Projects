<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Category style. -->
    <style name="categoryStyle">
        <item name="android:layout_width">@dimen/categoryLayout_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/defaultCatColor</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/categoryPadding</item>
        <item name="android:textColor">@color/categoryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title style. -->
    <style name="titleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/titlePadding</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Date style. -->
    <style name="dateStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/datePadding</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Contributor style. -->
    <style name="contributorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

</resources>
