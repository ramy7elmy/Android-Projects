<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sectionTextView"
        style="@style/categoryStyle"
        tools:text="@string/category_test" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/defaultCatColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            style="@style/titleStyle"
            tools:text="@string/title_test" />

        <TextView
            android:id="@+id/contributorView"
            style="@style/contributorStyle"
            android:text="@string/ramy_helmy"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/dateTextView"
            style="@style/dateStyle"
            tools:text="@string/date_test" />

    </LinearLayout>

</LinearLayout>